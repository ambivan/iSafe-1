<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/linlay3"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src = "@drawable/isafeassist"/>

    <TextView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="#000"
        android:fontFamily="@font/roboto"
        android:text="@string/assist"
        app:layout_constraintTop_toBottomOf="@+id/linlay3"/>
    <TextView
        android:id="@+id/dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="#000"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/first"
        android:text="Dial 1800-419-7779"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To get instant assistance"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/dial"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:fontFamily="@font/roboto"
        android:textColor="#000"
        android:id="@+id/get"        />

    <Button
        android:id="@+id/buttonassist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="25dp"
        android:background="@drawable/call_buttonbg"
        android:fontFamily="@font/roboto"
        android:text="Call for Assistance"
        android:textAllCaps="false"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/get"
        tools:layout_editor_absoluteX="40dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id = "@+id/knowmore"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:text="Know more > "
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#2167F3"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonassist"        />

</android.support.constraint.ConstraintLayout>
</ScrollView>
