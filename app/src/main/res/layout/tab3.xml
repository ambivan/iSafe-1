<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.NoActionBar"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.isafe.HomePageActivity">


    <TextView
        android:id="@+id/reporttext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto"
        android:padding="15sp"
        android:text="Report an Accident"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/reporttext">


        <LinearLayout
            android:id="@+id/clicklin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background"
            android:orientation="horizontal"
            >



            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:src="@drawable/camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto"
                android:text="Click Photo"
                android:textColor="#000" />



        </LinearLayout>

        <LinearLayout
            android:visibility="gone"

            android:orientation="vertical"
            android:id="@+id/lin1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photos"
                android:textAlignment="textStart"

                android:id="@+id/phototext"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="#000"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >


                <ImageView
                    android:id="@+id/what"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="start"
                    />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <ImageView

                    android:id="@+id/second"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"

                    >

                </ImageView>


                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/third"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/relative2"
        app:layout_constraintTop_toBottomOf="@id/relative"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content">


        <LinearLayout
            android:background="@drawable/background"

            android:padding="10dp"
            android:id="@+id/loclin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto"
                android:text="Attach Location"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Location"
                android:textAlignment="textStart"

                android:id="@+id/loctext"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="#000"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/loctag"/>

            <Button
                android:id="@+id/locat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_first_bg"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:text="View On Map"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"/>

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@id/relative2"
        android:id="@+id/relative3"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/contactlin"
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/call"
                android:layout_marginLeft="25dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto"
                android:text="Contact Person"
                android:textColor="#000" />



        </LinearLayout>

        <LinearLayout

            android:id="@+id/lin3"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Contact Person"
                android:textAlignment="textStart"

                android:id="@+id/context"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="#000"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000"

                    android:id="@+id/namee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="cbdsk"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:textColor="#000"
                    android:id="@+id/phonenoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cbdsjkcb"
                    android:layout_gravity="right"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <Button

        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:text="Report"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"

        android:textSize="20sp"
        android:textColor="#000"
        android:background="@drawable/reportbuttonbg"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relative3" />

</android.support.constraint.ConstraintLayout>